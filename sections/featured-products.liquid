<head>
	<style>


		.btn__featured__cart {
		  	font-family: arial, sans-serif;
		  	font-weight: bold;
		  	text-transform: uppercase;
		  	font-size: 15px;
		  	text-align: center;
		  	width: 100%;
		  	height: 2.5em;
		  	border: 2px solid white;
		  	color: white;
		  	background: rgb(116, 71, 255);
		}

		.btn__featured__cart:hover {
		  	font-family: arial, sans-serif;
		  	font-weight: bold;
		  	text-transform: uppercase;
		  	font-size: 15px;
		  	text-align: center;
		  	width: 100%;
		  	height: 2.5em;
		  	border: 2px solid rgb(116, 71, 255);
		  	color: rgb(116, 71, 255);
		  	background: white;
		}

		.btn__featured__cart--fold {
			position: relative;
		}

		.btn__featured__cart--fold:before {
			content: "";
			position: absolute;
			bottom: 0%;
			right: 0%;
			width: 0px;
			height: 0px;
			border-bottom: 10px solid #white;
			border-left: 10px solid rgb(70, 57, 129);
		}

	</style>
</head>
<body>
	<div id="shopify-section-featured-products" class="shopify-section index-section">
		<div class="page-width">

			{% if section.settings.title != blank %}
				<div class="section-header text-center">
					<h2>{{ section.settings.title | escape }}</h2>
				</div>
			{% else %}
				<div class="section-header text-center">
	            	<h2>Section Title</h2>
	        	</div>
	        {% endif %}

			<!-- items grid -->

			{%- assign max_height = 250 -%}
			{%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}

			{%- assign collection = collections[section.settings.collection] -%}
			<ul class="grid grid--uniform grid--view-items">

				{% for product in collection.products limit: product_limit %}
					
				    <li class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
				    	<div class="grid-view-item__image-wrapper">
							<a href="{{ product.url }}" class="grid__image">
							</a>
							
						    {% include 'product-card-grid', max_height: max_height, product: product %}
				
						    <button class="btn__featured__cart btn__featured__cart--fold">ADD TO CART</button>
					    </div>
				    </li>

				     
			    {% endfor %}
			
			</ul>

		</div>
	</div>
</body>

{% schema %}
  {
    "name": "Featured-Products",
    "tag": "section",

    "settings": [
    	{
    		"type": "text",
    		"id": "title",
    		"label": "Heading",
    		"default": "Featured Products"
    	},
        

        {
        	"id": "collection",
        	"type": "collection",
        	"label": "Collection"
        }
        
        
    ],
    "presets": [
    	{
    		"name": "Featured Products",
    		"category": "custom section"
    	}
    ]
  }
{% endschema %}

{% stylesheet %}

	
.grid-view-item__image-wrapper {
    margin: 0;
    position: relative;
    width: 100%;
}


.btn__featured__cart {
  	background-color: rgb(116, 71, 255);
 
}

{% endstylesheet %}

